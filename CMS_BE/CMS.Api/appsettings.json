{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/basic_{Date}.log",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/verbose_{Date}.log",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level}] {Message:lj} (at {SourceContext}){NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithCorrelationId", "WithThreadId"],
    "Properties": {
      "Application": "CMS_API"
    }
  },
  "AllowedHosts": "*"
}
